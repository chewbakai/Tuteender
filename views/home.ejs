<%- include('./partials/homeHeader.ejs') %> 

<body>
      <!-- Page Content -->
      <div class="popular_courses">
        <div class="container">
  
          <div class="row justify-content-center">
            <div class="col-lg-6">
              <div class="main_title">
                <br><br><br><br>
                <h2 class="mb-3">Building Knowledge and Empowering Learners</h2>
                <p>
                  Look for tutoring services or post a tutor job to help others
                </p>
              </div>
            </div>
          </div>
          <div class="col text-right">
          <a href="/add-tutor" class="primary-btn2 mb-3 mb-sm-0">Add Tutorials</a></i></button>
