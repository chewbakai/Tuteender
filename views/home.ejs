                        <a href="/tutors/<%= tutor.id %>"><img class="img-fluid" src="<%= tutor.picture %>" width="150px" height="150px"></a>
                    </div>
                    <div class="course_content">
                      <span class="tag mb-4 d-inline-block">Php <%= tutor.rate %></span>
                      <h4 class="mb-3">  
                        <a href="/tutors/<%= tutor.id %>"><%= tutor.title %></a></h4>
                      </h4>
                      <p> <%= tutor.description %> </p>
                      <div
                      class="course_meta d-flex justify-content-lg-between align-items-lg-center flex-lg-row flex-column mt-4">
                      <!-- <a href="https://www.facebook.com/kyrahceniza"><i class="ti-menu"></i></a> -->
                      <a href="/tutors/<%= tutor.id %>"role="button"><i class="ti-menu"></i> View Details</a>
