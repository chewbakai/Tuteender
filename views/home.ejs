<%- include('./partials/homeHeader.ejs') %> 

<body>
      <!-- Page Content -->
      <div class="popular_courses">
        <div class="container">
  
          <div class="row justify-content-center">
            <div class="col-lg-6">
              <div class="main_title">
                <br><br><br><br>
                <h2 class="mb-3">Building Knowledge and Empowering Learners</h2>
                <p>
                  Look for tutoring services and earn money while helping others
                </p>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-lg-12">
                <div class="owl-carousel active_course">
                  <% tutors.forEach(tutor => { %>
                  <div class="single_course">
                    <div class="course_head">
                        <a href="#"><img class="img-fluid" src="img/features/f2.png" alt=""></a>
                    </div>
                    <div class="course_content">
                      <span class="tag mb-4 d-inline-block">Php <%= tutor.rate %></span>
                      <h4 class="mb-3">  
                        <a href="/tutors/<%= tutor._id %>"><%= tutor.title %></a></h4>
                      </h4>
                      <p> <%= tutor.description %> </p>
                      <div
                      class="course_meta d-flex justify-content-lg-between align-items-lg-center flex-lg-row flex-column mt-4">
                      <!-- <a href="https://www.facebook.com/kyrahceniza"><i class="ti-menu"></i></a> -->
                      <a href="/tutors/<%= tutor._id %>"role="button"><i class="ti-menu"></i> View Details</a>
                                <!-- <a class="btn btn-primary" href="/admin/edit-tutor/<%=tutor._id%>" role="button">Edit</a> -->
                                <!-- <form action="/admin/delete-tutor" method="POST">
                                  <input type="hidden" name="id" value="<%=tutor._id%>>
                                  <button type="submit" class="btn btn-primary">Delete</button>
                                </form> -->
                                <form action="/add-to-cart" method="POST">
                                    <input type="hidden" name="id" value="<%= tutor._id %>id">
                                    <button type="submit" class="btn btn-primary"><i class="ti-plus"></i> Add to Cart</button>
                                </form>
                      </div>
                    </div>
                  </div>
                  <% }) %>
                
                </div>
              </div>
            </div>

                                
                             
                       
        </div>
      </div>
      <script src="js/jquery-3.2.1.min.js"></script>
      <script src="js/popper.js"></script>
      <script src="js/bootstrap.min.js"></script>
      <script src="vendors/nice-select/js/jquery.nice-select.min.js"></script>
      <script src="vendors/owl-carousel/owl.carousel.min.js"></script>
      <script src="js/owl-carousel-thumb.min.js"></script>
      <script src="js/jquery.ajaxchimp.min.js"></script>
      <script src="js/mail-script.js"></script>
      <script src="js/theme.js"></script>
    </body>

  