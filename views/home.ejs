<%- include('./partials/homeHeader.ejs') %> 

<body>
      <!-- Page Content -->
    <div class="container">
      <div class="row">
            <div class="col-lg-9">
                <div class="row">
                  <% tutors.forEach(tutor => { %>
                    <div class="col-lg-4 col-md-6 mb-4">
                      <div class="card h-100">
                           <a href="#"><img class="card-img-top" src="<%= tutor.picture%>" alt=""></a>
                              <div class="card-body">
                                <h4 class="card-title"><a href="#"> <%= tutor.title%></a></h4>
                                <h5>$<%= tutor.rate%> </h5>
                                  <!-- <p class="card-text"><%= p.description%> </p> -->
                              </div>
                              <div class="card-footer">
                                <a class="btn btn-primary" href="/tutors/<%=p._id%>" role="button">View Details</a>
                                  <a class="btn btn-primary" href="/admin/edit-tutor/<%=p._id%>" role="button">Edit</a>
                                  <form action="/admin/delete-tutor" method="POST">
                                    <input type="hidden" name="id" value="<%=p._id%>">
                                    <button type="submit" class="btn btn-primary">Delete</button>
                                  </form>
                                  <form action="/add-to-cart" method="POST">
                                    <input type="hidden" name="id" value="<%=p.id%>">
                                    <button type="submit" class="btn btn-primary">Add to Cart</button>
                                  </form>
                              </div>
                        </div>
                      </div>
                      <% }) %>

                </div>
              </div>
        </div>
      </div>